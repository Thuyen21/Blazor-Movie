@inject IJSRuntime JS
@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page">
    <main>
        <div class="sidebar">
            <div class="logo-details">
                <i class='bx bx-tv'></i>
                <div class="logo_name"><a href="/" class="logo_name">MovieTV</a></div>
                <i class='bx bx-menu' id="btn"></i>
            </div>
            <ul class="nav-list">
                @*<li>
                    <i class='bx bx-search'></i>
                    <input type="text" placeholder="Search...">
                    <span class="tooltip">Search</span>
                    </li>*@
                <li>
                    <a href="home">
                        <i class='bx bx-home'></i>
                        <span class="links_name">Home</span>
                    </a>
                    <span class="tooltip">Home</span>
                </li>
                <li>
                    <a href="contact">
                        <i class='bx bx-heart'></i>
                        <span class="links_name">Contact Us</span>
                    </a>
                    <span class="tooltip">Contact Us</span>
                </li>


                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <li>
                            <a href="AdminAccountManagement">
                                <i class='bx bxs-group'></i>
                                <span class="links_name">Account Management</span>
                            </a>
                            <span class="tooltip">Account Management</span>
                        </li>

                        <li>
                            <a href="MovieAdmin">
                                <i class='bx bx-movie'></i>
                                <span class="links_name">Movie Management</span>
                            </a>
                            <span class="tooltip">Movie Management</span>
                        </li>
                        <li>
                            <a href="ReadFeedBack">
                                <i class='bx bx-chat'></i>
                                <span class="links_name">Feedback Management</span>
                            </a>
                            <span class="tooltip">Feedback Management</span>
                        </li>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView Roles="Customer">
                    <Authorized>
                        <li>
                            <a href="MovieCustomer">
                                <i class='bx bx-movie-play'></i>
                                <span class="links_name">Movie</span>
                            </a>
                            <span class="tooltip">Movie</span>
                        </li>

                        <li>
                            <a href="Deposit">
                                <i class='bx bx-money'></i>
                                <span class="links_name">Deposit</span>
                            </a>
                            <span class="tooltip">Deposit</span>
                        </li>
                        <li>
                            <a href="BuyVip">
                                <i class='bx bx-diamond'></i>
                                <span class="links_name">Buy Vip</span>
                            </a>
                            <span class="tooltip">Buy Vip</span>
                        </li>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView Roles="Studio">
                    <Authorized>
                        <li>
                            <a href="MovieStudio">
                                <i class='bx bxs-camera-movie'></i>
                                <span class="links_name">Movie Studio</span>
                            </a>
                            <span class="tooltip">Movie Studio</span>
                        </li>

                        <li>
                            <a href="CreateStudio">
                                <i class='bx bx-cloud-upload'></i>
                                <span class="links_name">Studio Public Movie</span>
                            </a>
                            <span class="tooltip">Studio Public Movie</span>
                        </li>
                        <li>
                            <a href="SalaryStudio">
                                <i class='bx bx-pie-chart-alt-2'></i>
                                <span class="links_name">Salary Studio</span>
                            </a>
                            <span class="tooltip">Salary Studio</span>
                        </li>
                    </Authorized>
                </AuthorizeView>

                <AuthorizeView>
                    <Authorized>
                        <li class="profile">
                            <a href="Profile">
                                <div class="profile-details">
                                    <i class='bx bxs-user-check'></i>
                                    <div class="name_job">
                                        <div class="links_name"
                                             style="overflow: hidden; text-overflow: ellipsis; max-width: 170px;">
                                            @context.User.Identity.Name
                                        </div>
                                        <div class="links_name">
                                            @context.User.FindFirst(ClaimTypes.Role).Value
                                        </div>
                                    </div>
                                </div>

                            </a>

                        </li>
                        <li>
                            <a href="logout">
                                <i class='bx bx-log-out'></i>
                                <span class="links_name">Logout</span>
                            </a>
                            <span class="tooltip">Logout</span>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li>
                            <a href="login">
                                <i class='bx bx-log-in'></i>
                                <span class="links_name">LogIn</span>
                            </a>
                            <span class="tooltip">LogIn</span>
                        </li>
                        <li>
                            <a href="SignUp">
                                <i class='bx bx-user-plus'></i>
                                <span class="links_name">Registration</span>
                            </a>
                            <span class="tooltip">Registration</span>
                        </li>
                        <li class="profile">
                            <a href="login">
                                <div class="profile-details">

                                    <i class='bx bxs-user-x'></i>
                                    <div class="name_job">
                                        <div class="links_name">You are not logged in</div>
                                    </div>
                                </div>
                            </a>

                        </li>
                    </NotAuthorized>
                </AuthorizeView>


            </ul>
        </div>
        <section class="home-section">
            <div class="text">@Body</div>
        </section>
        <div style="text-align: center">@GetType().Assembly.GetName().Version.ToString()</div>


    </main>
</div>
