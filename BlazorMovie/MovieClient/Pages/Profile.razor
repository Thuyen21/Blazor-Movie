<h3>Profile</h3>
@attribute [Authorize]
@page "/profile"
@inject IAccountService _accountService;

<PageTitle>Profile</PageTitle>

<body>
	<div class="container">
		<div class="row gutters">
			<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
				<div class="card h-100">
					<div class="card-body">
						<div class="account-settings">
							<div class="user-profile">
								<div class="user-avatar">
									<img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Maxwell Admin"
										style="border-radius:75%">
								</div>
								<h5 class="user-name">@user.Name</h5>
								<h6 class="user-email">@user.Email</h6>
							</div>
							<div class="about">
								<h5>@user.Role</h5>
								<p style="font-weight: 300">@user.Id</p>
								<p>@user.Wallet</p>
								@if (alertService.showAlert)
								{
									<MudAlert Severity="alertService.severity" Variant="Variant.Filled"
									ContentAlignment="HorizontalAlignment.Center" ShowCloseIcon="true"
									CloseIconClicked="(() => alertService.CloseAlert())">@alertService.content</MudAlert>
								}

							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
				<div class="card h-100">
					<div class="card-body">
						<EditForm Model="@user" OnValidSubmit="HandleValidSubmit">
							<DataAnnotationsValidator />
							<ValidationSummary />
							<div class="row gutters">
								<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
									<h6 class="mb-2 text-primary">Personal Details</h6>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label>Full Name</label>
										<input type="text" class="form-control"
											placeholder="@user.Name"
											@bind="@user.Name">
									</div>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label><span style="color:red">Email</span></label>
										<input type="email" class="form-control"
											placeholder="@user.Email" style="pointer-events:none"
											@bind="@user.Email">
									</div>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label for="phone">Date of Birth</label>
										<input type="date" class="form-control"
											placeholder="@user.DateOfBirth"
											@bind="@user.DateOfBirth">
									</div>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label><span style="color:red">Wallet</span></label>
										<input type="text" class="form-control"
											placeholder="@user.Wallet" style="pointer-events:none"
											@bind="@user.Wallet">
									</div>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label><span style="color:red">Role</span></label>
										<input type="text" class="form-control"
											placeholder="@user.Role" style="pointer-events:none"
											@bind="@user.Role">
									</div>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label><span style="color:red">ID</span></label>
										<input type="text" class="form-control" placeholder="@user.Id"
											style="pointer-events:none" @bind="@user.Id">
									</div>
								</div>
								<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
									<div class="text-left">NOTE: You can't edit field has <span
											style="color:red">RED</span> color.</div>
									<div class="text-right">
										<button type="submit" class="btn btn-primary"
											style="width:83px">Confirm</button>
									</div>
								</div>

							</div>
						</EditForm>
						<EditForm Model="@changeEmail" OnValidSubmit="ChangeEmail">
							<DataAnnotationsValidator />
							<ValidationSummary />
							<div class="row gutters">
								<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
									<h6 class="mt-3 mb-2 text-primary">New Email</h6>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label for="Street">New Email</label>
										<input type="text" class="form-control" placeholder="Enter new email address"
											@bind="@changeEmail.Email">
									</div>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
									<div class="form-group">
										<label for="ciTy">Password</label>
										<input type="password" class="form-control" placeholder="Enter new password"
											@bind="@changeEmail.Password">
									</div>
								</div>
								<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
									<div class="text-right">
										<button type="submit" class="btn btn-primary"
											style="width:83px">Confirm</button>
									</div>
								</div>
							</div>
						</EditForm>
						<div class="row gutters" style="padding-top: 10px">
							<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
								<div class="text-right">
									<label>Fogot Password? </label>
									<button type="submit" class="btn btn-danger" style="width:83px"
										@onclick="ChangePass">Reset</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>