@model BlazorMovie.Shared.MovieModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<h1>EditMovie</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Admin/MovieUpload/@Model.MovieId/@Model.StudioId" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">If it is not a movie or image correct MIME it
                will not be uploaded.</div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Image</label>
                <input id="ImageFileUp" name="ImageFileUp" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieFile" class="control-label">Movie</label>
                <input id="MovieFileUp" name="MovieFileUp" class="form-control" type="file" />
                <span asp-validation-for="MovieFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <span id="spnMessage"></span>
    </div>
</div>